{
  "name": "example",
  "type": "module",
  "scripts": {
    "preinstall": "cd ../ && yarn install && yarn build",
    "build": "tsc",
    "build:client": "cd .. && yarn build",
    "_print_starting_label": "echo '' && echo '========== Starting ==========' && echo ''",
    "run:example": "yarn build:client && yarn _print_starting_label && node --loader ts-node/esm --no-warnings=ExperimentalWarning",

    "admin-webhooks": "yarn run:example adminAPI/webhooks.ts",
    "admin-add-user": "yarn run:example adminAPI/add-user.ts",
    "admin-remove-user": "yarn run:example adminAPI/remove-user.ts",
    "admin-get-handled-paymail-domains": "yarn run:example adminAPI/get-handled-paymail-domains.ts",

    "user-generate-totp": "yarn run:example userAPI/generate-totp.ts",
    "user-access-key": "yarn run:example userAPI/access-key.ts",
    "user-get-balance": "yarn run:example userAPI/get-balance.ts",
    "user-get-handled-paymail-domains": "yarn run:example userAPI/get-handled-paymail-domains.ts",
    "user-sync-merkleroots": "yarn run:example userAPI/sync-merkleroots.ts",
    "user-update-xpub-metadata": "yarn run:example userAPI/update-user-xpub-metadata.ts",
    "user-get-shared-config": "yarn run:example userAPI/get-shared-config.ts",
    "user-list-transactions": "yarn run:example userAPI/list-transactions.ts",
    "user-create-transaction": "yarn run:example userAPI/create-transaction.ts",
    "user-send-op-return": "yarn run:example userAPI/send-op-return.ts",

    "xpriv-from-mnemonic": "yarn run:example keys/xpriv-from-mnemonic.ts",
    "xpub-from-xpriv": "yarn run:example keys/xpub-from-xpriv.ts",
    "generate-keys": "yarn run:example keys/generate-keys.ts",
    
    "handle-exceptions": "yarn run:example handle-exceptions.ts",
    "custom-logger": "yarn run:example custom-logger.ts",
    "webhook": "yarn run:example webhook.ts"
  },
  "version": "0.0.0",
  "devDependencies": {
    "@types/express": "^5.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "fastify": "^5.2.0"
  }
}

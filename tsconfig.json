{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "importHelpers": true
  },
  "exclude": [
    "examples",
    "dist"
  ]
}

{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "dist/dts/",
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "importHelpers": true
  },
  "exclude": [
    "examples"
  ]
}
